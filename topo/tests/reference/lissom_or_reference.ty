def check_weights(sheet_name,name,unit,r_slice,c_slice,side):
    """
    """
    cTIME = "%06d"%long(topo.sim.time())
    cREGION = c_regions[sheet_name]
    cNAME = c_names[name]
    cUNIT = "%03d_%03d"%unit
    
    matching.update(compare_weights(
        'topo/tests/reference/or_map_topo.'+cTIME+'.wts.'+cREGION+'.'+cNAME+'.'+cUNIT+'.matrix',
        c_slice,r_slice,side,
        unit,sheet_name,name))


